<!DOCTYPE html>
<html>
<head>
  <title>Spencer Dixon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/nav' %>

  <div class="container">
    <% if flash.any? %>
      <% if flash[:notice] %>
        <p class="alert success"><%= notice %></p>
      <% end %>

      <% if flash[:alert] %>
        <p class="alert danger"><%= alert %></p>
      <% end -%>
    <% end %>

    <% if current_user && current_user.is_admin? %>
      <%= link_to "All Users", admin_users_path, class: "btn info" %>
      <%= link_to "All Posts", admin_posts_path, class: "btn info" %>
      <%= link_to "All Goals", admin_goals_path, class: "btn info" %>
      <%= link_to "New Post", new_admin_post_path, class: "btn success" %>
      <%= link_to "New Goal", new_admin_goal_path, class: "btn success" %>
    <% end -%>

    <%= yield %>
  </div>

  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-51806130-2', 'auto');
    ga('send', 'pageview');
  </script>

</body>
</html>
