<!DOCTYPE html>
<html>
<head>
  <title>Spencer Dixon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <% if flash.any? %>
      <% if flash[:notice] %>
        <p class="alert warning"><%= notice %></p>
      <% end %>

      <% if flash[:alert] %>
        <p class="alert success"><%= alert %></p>
      <% end -%>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
